{
  "compilerOptions": {
    "baseUrl": "src",
    "jsx": "react",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "target": "es2020",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "build"]
}
